# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.{js,json,vue,scss,rb,haml,yml}]
indent_size = 2

[*.{js,json,vue,scss,rb,haml,yml,md}]
indent_style = space
charset = utf-8

[*.{md,markdown,js.snap}]
trim_trailing_whitespace = false

[*.rb]
max_line_length = 120

[*.sh]
end_of_line = rf
indent_style = tab
